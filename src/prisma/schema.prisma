// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Player {
    id     String @id @default(cuid())
    name   String
    team   Team   @relation(fields: [teamId], references: [id])
    teamId String
    mpg    String
    ppg    Float
    rpg    Float
    apg    Float
    bpg    Float
    spg    Float
}

model Team {
    id      String   @id @default(cuid())
    players Player[]
    color   String
    logo    String
}
