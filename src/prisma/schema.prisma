// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Player {
    id           String @id @default(cuid())
    name         String @unique
    team         String
    headshot     String
    recentSeason String
    mpg          Float
    ppg          Float
    rpg          Float
    apg          Float
    bpg          Float
    spg          Float
}

model Team {
    id    String @id @default(cuid())
    tag   String
    color String
    logo  String
}
